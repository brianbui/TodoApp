<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buibros.todoapp" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.TaskList.TaskListActivity"
            android:exported="true"
            android:label="@string/title_activity_task_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewTaskInput"
            android:label="@string/title_activity_new_task_input"
            android:parentActivityName=".activities.TaskList.TaskListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TaskList.TaskListActivity" />
        </activity>
        <activity
            android:name=".activities.PomodoroTimerActivity"
            android:label="@string/title_activity_pomodoro_timer"
            android:parentActivityName=".activities.TaskList.TaskListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TaskList.TaskListActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC3Lx1vQJ2qhU5bUoJNLmuyVT0PZ0-YFWg"
            />
    </application>

</manifest>
