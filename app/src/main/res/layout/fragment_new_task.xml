<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/taskInputLayoutView"
    tools:context="com.buibros.todoapp.activities.TaskList.TaskInputFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/taskInputToolBar"
        android:layout_height="128dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primaryColor"
        android:elevation="2dp"/>
    <AutoCompleteTextView
        android:id="@+id/autoCompleteTaskInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/newTaskInputHint"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeActionId="0"
        android:textColorHint="#FFFFFF"
        android:layout_alignBottom="@+id/taskInputToolBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:elevation="2dp"/>
    <ImageButton
        android:clickable="true"
        android:id="@+id/cancel_input"
        android:background="@color/primaryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_white_24dp"
        android:elevation="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />
    <ImageButton
        android:clickable="true"
        android:id="@+id/save"
        android:background="@color/primaryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_white_24dp"
        android:elevation="2dp"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_alignTop="@+id/cancel_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
